<form method="post" action="/tracks">
  <div>
    <label>Author:</label>
    <input type="text" name="artist" value="<%= @track && @track.artist %>">
  </div>
  <div>
    <label>Title:</label>
    <input type="text" name="title" value="<%= @track && @track.artist %>">
  </div>
  <div>
    <label>URL:</label>
    <input type="text" name="url" value="http://<%= @track && @track.artist %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>